<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- App Header -->
    <TextView
        android:id="@+id/textAppTitle"
        android:text="@string/recipe_book_title"
        android:textSize="22sp"
        android:padding="16dp"
        android:background="#6200EE"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Recipe List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Input Fields -->
    <EditText
        android:id="@+id/editTitle"
        android:hint="@string/recipe_title_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:autofillHints="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editDescription"
        android:hint="@string/recipe_description_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints="text"
        android:inputType="textMultiLine" />

    <!-- Add Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:weightSum="2">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnAddSavory"
            android:text="@string/add_savory"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnAddSweet"
            android:text="@string/add_sweet"
            android:backgroundTint="#E91E63"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>
